{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Mappings": {
    "Region2AMI" : {
      "Fn::Include": "https://api.netcubed.de/latest/ami/lookup?architecture=HVM64"
    }
  },
  "Resources": {
    "Instance": {
      "Parameters": {
        "UserData": {
          "Fn::Base64": {
            "Fn::Include": {
              "type": "literal",
              "location": "userdata.txt",
              "context": {
                "stack": { "Ref": "AWS::StackName" },
                "region": { "Ref": "AWS::Region" }
              }
            }
          }
        }
      }
    }
  }
}
